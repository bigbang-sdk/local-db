{
  "name": "@bigbang-sdk/local-db",
  "description": "A library for local database using IndexedDB and Zod for React",
  "homepage": "https://github.com/bigbang-sdk/local-db",
  "keywords": [
    "local-db",
    "indexeddb",
    "keyval",
    "zod",
    "react",
    "javascript",
    "typescript",
    "js",
    "ts"
  ],
  "author": "Bigbang",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/bigbang-sdk/local-db.git"
  },
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "dist",
    "README.md"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc -p tsconfig.json",
    "pack": "npm run build && npm pack --pack-destination ./archive/"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "devDependencies": {
    "@types/bun": "latest"
  },
  "peerDependencies": {
    "typescript": "^5"
  },
  "dependencies": {
    "fast-deep-equal": "^3.1.3",
    "idb-keyval": "^6.2.2",
    "zod": "^4.1.12"
  }
}
